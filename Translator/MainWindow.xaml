<Window x:Class="Translator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Translator" Height="365" Width="250" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="Black">
        <Button Content="Перевести" HorizontalAlignment="Left" Margin="139,152,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" />
        <RadioButton x:Name="RuEn" Content="Rus-Eng" HorizontalAlignment="Left" Margin="10,138,0,0" VerticalAlignment="Top" Background="#FFF3F2F2" Foreground="#FFFDFDFD" FontSize="20" BorderBrush="#FF8E8F8F"/>
        <RadioButton x:Name="EnRu" Content="Eng-Rus" HorizontalAlignment="Left" Margin="10,168,0,0" VerticalAlignment="Top" Background="#FFF3F2F2" Foreground="#FFFDFDFD" FontSize="20" BorderBrush="#FF8E8F8F"/>
        <TextBox x:Name="inText" HorizontalAlignment="Left" Height="102" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="215" Background="#FFFDFDFD" FontSize="22" FontWeight="Bold"/>
        <TextBox x:Name="outText" HorizontalAlignment="Left" Height="102" Margin="10,218,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="217" Background="White" FontSize="22" FontWeight="Bold">
            <TextBox.BorderBrush>
                <LinearGradientBrush EndPoint="0,20" MappingMode="Absolute" StartPoint="0,0">
                    <GradientStop Color="#FFABADB3" Offset="0.05"/>
                    <GradientStop Color="#FFE2E3EA" Offset="0.07"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.BorderBrush>
        </TextBox>
    </Grid>
</Window>
