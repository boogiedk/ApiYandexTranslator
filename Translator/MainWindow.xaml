<Window x:Class="Translator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Translator" Height="325" Width="255" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="Green" Height="290" Width="240">
        <Button Content="О" HorizontalAlignment="Left" Margin="104,143,0,0" VerticalAlignment="Top" Width="30" Click="Button_Click" />
        <TextBox x:Name="inText" HorizontalAlignment="Left" Height="102" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="219" Background="#FFFDFDFD" FontSize="22" FontWeight="Bold" TextChanged="inText_TextChanged"/>
        <TextBox x:Name="outText" HorizontalAlignment="Left" Height="102" Margin="10,178,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="219" Background="White" FontSize="22" FontWeight="Bold">
            <TextBox.BorderBrush>
                <LinearGradientBrush EndPoint="0,20" MappingMode="Absolute" StartPoint="0,0">
                    <GradientStop Color="#FFABADB3" Offset="0.05"/>
                    <GradientStop Color="#FFE2E3EA" Offset="0.07"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.BorderBrush>
        </TextBox>
        <Label Name="langlabel" Content="Английский -> Русский" HorizontalAlignment="Left" Margin="51,117,0,0" VerticalAlignment="Top" Width="141"/>
        <Label Name="countlabel" Content="0" HorizontalAlignment="Left" Margin="10,117,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
